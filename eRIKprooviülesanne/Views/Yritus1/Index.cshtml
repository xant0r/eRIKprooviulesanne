@model IEnumerable<eRIKprooviülesanne.Models.Yritus1>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">

    <div class="panel panel-collapse">
        <div class="panel-heading">
            <div class="container-fluid">
                <div class="col-xs-3 text-left">
                    <h3 class="panel-title abc">
                        Ürituste Lisamine
                    </h3>
                </div>
                <div class="col-xs-3 pull-right center-cropped ">
                    <img src="~/Pictures/libled.jpg" class="img-responsive" />
                </div>
            </div>
        </div>




        <div class="panel-body">
            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Ürituse_nimi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Toimumisaeg)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Koht)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lisainfo)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ürituse_nimi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Toimumisaeg)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Koht)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lisainfo)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>


        </div>
    </div>
</div>