@model eRIKprooviülesanne.Models.Yritus1

@{
    ViewBag.Title = "Ürituste Lisamine";
}


<div class="container-fluid">

    <div class="panel panel-collapse">
        <div class="panel-heading">
            <div class="container-fluid">
                <div class="col-xs-3 text-left">
                    <h3 class="panel-title abc">
                        Ürituste Lisamine
                    </h3>
                </div>
                <div class="col-xs-3 pull-right center-cropped ">
                    <img src="~/Pictures/libled.jpg" class="img-responsive" />
                </div>
            </div>
        </div>




        <div class="panel-body">
            <h4 class="text-primary">Ürituste lisamine</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ürituse_nimi, "Ürituse nimi", htmlAttributes: new { @class = "control-label.text-left col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ürituse_nimi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ürituse_nimi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Toimumisaeg, htmlAttributes: new { @class = "control-label.text-left col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Toimumisaeg, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Toimumisaeg, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Koht, htmlAttributes: new { @class = "control-label.text-left col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Koht, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Koht, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Lisainfo, htmlAttributes: new { @class = "control-label.text-left col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Lisainfo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Lisainfo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <button type="button" onclick="location.href='@Url.Action("NewIndex", "Yritus1")'" class="btn btn-secondary">Tagasi</button>
                            <button type="submit" class="btn btn-primary">Lisa</button>
                        </div>
                    </div>
                </div>


            }


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }




        </div>
    </div>
</div>